        <ListView x:Name="myListView" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="RestartGame" Text="Jeszcze raz" Grid.Row="1" Grid.Column="1" Clicked="RestartGame_Clicked" />
        <Button x:Name="ShowSongs" Text="Pokaż piosenki" Grid.Row="1" Grid.Column="2" Clicked="ShowSongs_Clicked"/>
        <Button x:Name="Menu" Text="Menu głowne" Grid.Row="1" Grid.Column="3" Clicked="Menu_Clicked"/>

    </Grid>
   
</ContentPage>