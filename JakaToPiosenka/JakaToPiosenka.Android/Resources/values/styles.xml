<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Główna tematyka aplikacji -->
  <style name="MainTheme" parent="MainTheme.Base">
  </style>

  <!-- Bazowy styl aplikacji, używany na wszystkich API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Ukrywanie ActionBar -->
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <!-- Kolory motywu -->
    <item name="colorPrimary">#2196F3</item>
    <!-- Główny kolor -->
    <item name="colorPrimaryDark">#1976D2</item>
    <!-- Kolor status bara -->
    <item name="colorAccent">#979998</item>
    <!-- Akcent (np. dla interaktywnych elementów) -->

    <!-- Nakładka na ActionMode -->
    <item name="windowActionModeOverlay">true</item>

    <!-- Dialogi (np. date picker) -->
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <!-- Styl dla dialogów -->
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#979998</item>
  </style>

  <!-- Styl dla splash screena -->
  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Tło splash screena -->
    <item name="android:windowBackground">@color/gray_background</item>
  </style>

  <!-- Definicje kolorów -->
  <color name="gray_background">#929292</color>
  <!-- Szary kolor tła -->
</resources>
